<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkspaceFragment"
    android:background="#414141">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkspaceFragment"
    android:background="#414141"
    android:orientation="vertical">

    <GridLayout
    android:rowCount="2"
    android:columnCount="2"
    android:layout_gravity="center"
    android:background="#414141"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbuttonlayout"
        android:backgroundTint="@android:color/darker_gray"
        android:layout_column="0"
        android:layout_row="0"
        android:src="@drawable/camera"
        android:id="@+id/camerabutton"

        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"


        />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbuttonlayout"
        android:backgroundTint="@android:color/darker_gray"
        android:layout_column="1"
        android:layout_row="0"
        android:src="@drawable/gallery"
        android:id="@+id/gallerybutton"

        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbuttonlayout"
        android:backgroundTint="@android:color/darker_gray"
        android:layout_column="0"
        android:layout_row="1"
        android:src="@drawable/docs"
        android:id="@+id/docsbutton"

        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbuttonlayout"
        android:backgroundTint="@android:color/darker_gray"
        android:layout_column="1"
        android:layout_row="1"
        android:src="@drawable/mag"
        android:id="@+id/seachbutton"

        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        />

</GridLayout>


</LinearLayout>

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:hint="Search Query"
    android:textColor="@color/absoluteWhite"
    android:id="@+id/searchquery"/>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|right"
    android:text="GO"
    android:id="@+id/searcheditinputbutton"
    />

</FrameLayout>